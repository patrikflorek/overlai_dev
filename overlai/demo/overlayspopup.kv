<OverlayItem>:
    overlay_id: ''
    overlay_active: True
    overlay_visible: True
    orientation: "horizontal"
    size_hint_y: None
    height: "40dp"
    ToggleButton:
        text: "-" if self.state == "normal" else "A"
        state: "down" if root.overlay_active else "normal"
        size_hint_x: None
        width: "32dp"
        on_state: root.overlay_active = (self.stateu == "down")
    ToggleButton:
        text: "-" if self.state == "normal" else "A"
        state: "down" if root.overlay_visible else "normal"
        size_hint_x: None
        width: "32dp"
    Label:
        text: root.overlay_id
    Button:
        text: "Clear"
        size_hint_x: None
        width: self.texture_size[0]
    Button:
        text: "Delete"
        size_hint_x: None
        width: self.texture_size[0]

<OverlaysPopup>:
    items_container: items_container
    title: "Overlays settings"
    size_hint_y: 0.9
    BoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            ScrollView:
                BoxLayout:
                    id: items_container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "10dp"
                    spacing: "5dp"
            Button:
                text: "New overlay"
                size_hint_y: None
                height: "40dp"
                size_hint_x: None
                width: "200dp"
                pos_hint: {"center_x": 0.5}
        Button:
            text: "Close"
            on_release: root.dismiss()
            size_hint_y: None
            height: "40dp"